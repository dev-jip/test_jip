@-webkit-keyframes load1
  0%,
  80%,
  100%
    box-shadow 0 0
    height 1em
  40%
    box-shadow 0 -2em
    height 2em

.mc_pgn_container
.mc_is_container
  position relative
  min-height 100%
  .mc_pagination
    position relative
    text-align center
    .pagination-wrap
      font-size 16px
      >*
        position relative
        display inline-block
        vertical-align top
        height 38px
      .message
        display block
        font-size 11px
        font-weight 100
        height 13px
        margin-top 3px
      input[type="number"]
        font-size 16px
        padding 0
        margin 0
        line-height 38px
        height 38px
        width 38px
        text-align center
        border 1px solid #d2d2d2
        border-radius 1px
        -webkit-appearance: none;
        &::-webkit-inner-spin-button
        &::-webkit-outer-spin-button
          -webkit-appearance none
          margin 0
      span.slash
        width 25px
        background-repeat no-repeat
        background-position 40% 50%
        background-image url(//s3.marpple.co/s/5/marpple2/img/main2/slash.png)
      span.max
        font-weight 300
        line-height 40px
      button
        background transparent
        border 0
        padding 0
        width 40px
        height 40px
        margin 0 15px
        background-repeat no-repeat
        background-position center
        &.next
          background-image url(//s3.marpple.co/s/5/marpple2/img/main2/next_button.png)
        &.prev
          background-image url(//s3.marpple.co/s/5/marpple2/img/main2/prev_button.png)
  .mc_pgn_container_loading
    z-index 1
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background rgba(0,0,0,0.1)
    .page_loader
      color #0000ff
      text-indent -9999em
      font-size 11px
      -webkit-transform translateZ(0)
      -ms-transform translateZ(0)
      transform translateZ(0)
      top 0
      left 0
      right 0
      bottom 0
      width 50px
      margin 20% auto
      z-index 1
      @media screen and (max-width: 1024px)
        font-size: 7px
      &.page_loader
      &:after
      &:before
        position absolute
        top 0
        content ''
        background #0000ff
        -webkit-animation load1 1s infinite ease-in-out
        animation load1 1s infinite ease-in-out
        width 1em
        height 1em
      &:after
        left: 1.5em
        -webkit-animation-delay +0.32s
        animation-delay +0.32s
      &:before
        left -1.5em
        -webkit-animation-delay -0.32s
        animation-delay -0.32s
  .mc_pgn_wrap
    position relative
    .mc_pgn_item
      position relative
      display inline-block
      vertical-align top
  .mc_is_item
    visibility hidden
    position absolute !important
    left 0
    top 0
    &.visible
      visibility visible !important
  .mc_img_wrap
    overflow hidden
    height 0
    padding-bottom 100%
    position relative
    margin auto
    img
      max-height 100%
      max-width 100%
      margin auto
      position absolute
      top 0
      left 0
      right 0
      bottom 0
