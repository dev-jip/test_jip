body.fixed
  position fixed !important
  overflow-y hidden !important
  width 100% !important
  height 100% !important
html, body
  margin 0
  padding 0
  font-size 13px
  color #222
  font-family 'Campton', 'Helvetica', 'Arial', 'NanumBarunGothicWeb', '돋움', dotum, 'Apple SD Gothic Neo', applegothic, sans-serif
  font-weight 200
  html[data-os="Windows"] &
    font-weight 300

  img:not([src])
    visibility hidden
  a
    &:visited
    &:hover
    &:active
    &:link
      color #222
      text-decoration none
#view_man
  width auto
  .hide
    transform translateY(100px)
  #menu
    position absolute
    width 100%
    height 50px
    display none
    transition transform 1s
    z-index 100
    bottom 0
  #upload
    flex 1
    background red
    input
      display none
  #search
    flex 2
    background blue
    text-align center
    input
      width 90%
      height 40px
      outline none
      font-size 20px
      margin-top 1px
  #main
    padding 10px
    .wrapper
      display flex
      justify-content center
    .contents
      width 1200px
      display flex
      flex-flow wrap
    .content
      width 600px
      position relative
      .option
        position absolute
        right 10px
        top 10px
        background red
      .edit
        display none
    .item
      margin 10px
      background yellow
      display flex
      .body
        width 100%
      .edit_option
        display none
        width 100%
        >input
          flex-grow 1
      .spec
        display flex
        >div
          flex-grow 1
    .on_edit
      .edit_option
        display flex
        width 100%
        >input
          flex-grow 1
      .spec
        display none
        >div
          flex-grow 1

    .item:hover .edit
        display block
    .blocking
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      background black
      opacity 0.4
    .video
      position absolute
      width 600px
      z-index 200
      transform translate(50%, 50%)
      .option
        .cancel
          position absolute
          right 10px
          top 10px
          width 20px
          height 20px
          color red
          font-size 25px
          display none
      video
        width 600px
        z-index 200